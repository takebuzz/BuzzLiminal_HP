<style>
  /* モバイル専用スタイル */
  .hero-section-mobile {
    position: relative;
    background-image: none;
    background-color: #001B2E;
    background-size: cover;
    background-position: center;
    overflow: hidden;
    margin-top: 0; /* ヘッダーの実際の高さ分のマージン */
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* オーバーレイ無効（画像を外したため） */
  .hero-section-mobile::before { display: none; }

  /* テキストラッパーのみ前面に */
  .hero-content { position: relative; z-index: 2; }

  /* デスクトップ専用スタイル */
  .hero-section-desktop {
    position: relative;
    background-image: none;
    background-color: #001B2E;
    background-size: cover;
    background-position: center;
    overflow: hidden;
    margin-top: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* オーバーレイ無効（画像を外したため） */
  .hero-section-desktop::before { display: none; }

  /* 子要素一括指定は撤去（videoが相対配置化してしまうため） */

  /* 強制的な表示制御 */
  @media (min-width: 1024px) {
    .hero-section-mobile {
      display: none !important;
    }
  }

  @media (max-width: 1023px) {
    .hero-section-desktop {
      display: none !important;
    }
  }

  /* ハイライト用スタイル */
  .highlight {
    background-image: linear-gradient(transparent 60%, rgba(4, 27, 42, 0.9) 60%);
    padding: 2px 4px;
  }

  /* 背景動画を常に全面表示 */
  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    pointer-events: none;
    background-color: #001B2E; /* 未ロード時/再生不可時の背景色 */
  }

  /* 動画とテキストの間の半透明オーバーレイ */
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
    pointer-events: none;
  }
</style>