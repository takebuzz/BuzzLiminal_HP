  <div class="container-custom">
    <div class="py-10">
      <!-- ロゴ＋住所 -->
      <div class="flex flex-col items-center">
        <div class="flex items-center gap-3 mb-3">
          <img src="/logo.png" onerror="this.onerror=null;this.src='/favicon.svg'" alt="BuzzLiminal" class="h-10 w-auto" />
        </div>
        <p class="text-sm text-gray-200 mb-6">東京都町田市原町田6-9-8 AETA 4F</p>
      </div>

      <!-- ナビゲーション -->
      <nav class="flex justify-center gap-8 text-sm sm:text-base font-medium mb-8">
        <a href="/" class="text-gray-200 hover:text-white transition">Home</a>
        <a href="/service" class="text-gray-200 hover:text-white transition">Service</a>
        <a href="/works" class="text-gray-200 hover:text-white transition">Works</a>
        <a href="/company" class="text-gray-200 hover:text-white transition">Company</a>
        <a href="/recruit" class="text-gray-200 hover:text-white transition">Recruit</a>
      </nav>

      <!-- コピーライト -->
      <div class="border-t border-white/10 pt-6">
        <p class="text-center text-xs sm:text-sm text-gray-300">Copyright © 株式会社BuzzLiminal All Rights Reserved.</p>
      </div>
    </div>
  </div>
