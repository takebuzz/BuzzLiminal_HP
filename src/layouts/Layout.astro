---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  robots?: string;
  ogImage?: string;
  ogImageAlt?: string;
  twitterSite?: string; // e.g. @your_handle
}

const { title, description = "日本全国｜TikTok運用代行ならBuzzLiminal", robots = "index, follow", ogImage, ogImageAlt, twitterSite } = Astro.props;

// Derived values for SEO/OG/LD+JSON
const currentUrl = Astro.url.href;
const origin = Astro.url.origin;
const siteName = 'BuzzLiminal';
const brandColor = '#041b2a';
const logoUrl = `${origin}/logo.png`;
const navItems = [
  { name: 'Home', path: '/' },
  { name: 'Service', path: '/service' },
  { name: 'Works', path: '/works' },
  { name: 'Company', path: '/company' },
  { name: 'Recruit', path: '/recruit' }
];
const defaultOgImage = `${origin}/og/og-default-1200x630.png`;
const effectiveOgImage = ogImage ?? defaultOgImage;
const effectiveOgImageAlt = ogImageAlt ?? siteName;
const defaultOgWidth = 1200;
const defaultOgHeight = 630;
const isDefaultOg = !ogImage;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={currentUrl} />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/favicon.svg" color="#041b2a" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#041b2a" />

    <meta name="theme-color" content="#041b2a" />
    <meta name="format-detection" content="telephone=no,address=no,email=no" />

    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={effectiveOgImage} />
    <meta property="og:image:secure_url" content={effectiveOgImage.replace('http://', 'https://')} />
    <meta property="og:image:alt" content={effectiveOgImageAlt} />
    <meta property="og:image:type" content="image/png" />
    {isDefaultOg && <meta property="og:image:width" content={`${defaultOgWidth}`} />} 
    {isDefaultOg && <meta property="og:image:height" content={`${defaultOgHeight}`} />}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {twitterSite && <meta name="twitter:site" content={twitterSite} />}
    <meta name="twitter:image" content={effectiveOgImage} />
    <meta name="twitter:image:alt" content={effectiveOgImageAlt} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link rel="dns-prefetch" href="//www.google.com" />
    <link rel="dns-prefetch" href="//maps.googleapis.com" />
    <link rel="dns-prefetch" href="//maps.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&display=swap" rel="stylesheet">

    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: '株式会社BuzzLiminal',
      url: origin,
      logo: logoUrl,
      telephone: '090-9950-1315',
      address: [
        { '@type': 'PostalAddress', streetAddress: '神奈川県相模原市南区上鶴間本町3-10-2-602', addressCountry: 'JP' },
        { '@type': 'PostalAddress', streetAddress: '東京都町田市原町田1-2-11 グラディート町田804', addressCountry: 'JP' }
      ]
    })}</script>

    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: siteName,
      url: origin,
      potentialAction: {
        '@type': 'SearchAction',
        target: `${origin}/?q={search_term_string}`,
        'query-input': 'required name=search_term_string'
      }
    })}</script>

    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'ItemList',
      itemListElement: navItems.map((item, index) => ({
        '@type': 'SiteNavigationElement',
        position: index + 1,
        name: item.name,
        url: `${origin}${item.path}`
      }))
    })}</script>

    {Astro.url.pathname !== '/' && (
      <script type="application/ld+json">{JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: [
          { '@type': 'ListItem', position: 1, name: 'Home', item: origin },
          ...navItems
            .filter(i => i.path === Astro.url.pathname)
            .map(i => ({ '@type': 'ListItem', position: 2, name: i.name, item: `${origin}${i.path}` }))
        ]
      })}</script>
    )}

    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebPage',
      name: title,
      description,
      url: currentUrl,
      isPartOf: { '@type': 'WebSite', name: siteName, url: origin }
    })}</script>
  </head>
  <body class="font-sans bg-white">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  
  html {
    font-family: 'Noto Sans JP', system-ui, sans-serif;
    background: #ffffff;
    background-size: 224px;
  }
  
  code {
    font-family: Menlo, Monaco, Lucida Console, monospace;
  }
</style> 