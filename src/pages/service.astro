      <script type="module">
        const accordion = document.querySelector('.qa-accordion');
        if (accordion) {
          const items = Array.from(accordion.querySelectorAll('.qa-item'));
          const buttons = Array.from(accordion.querySelectorAll('[data-qa-btn]'));
          function collapse(panel, btn, icon) {
            if (!panel) return;
            panel.style.maxHeight = '0px';
            panel.classList.remove('opacity-100');
            panel.setAttribute('aria-hidden', 'true');
            if (btn) btn.setAttribute('aria-expanded', 'false');
            if (icon) icon.classList.remove('rotate-180');
          }
          function expand(panel, btn, icon) {
            if (!panel) return;
            panel.style.maxHeight = panel.scrollHeight + 'px';
            panel.classList.add('opacity-100');
            panel.setAttribute('aria-hidden', 'false');
            if (btn) btn.setAttribute('aria-expanded', 'true');
            if (icon) icon.classList.add('rotate-180');
          }
          buttons.forEach((btn) => {
            btn.addEventListener('click', () => {
              const panelId = btn.getAttribute('aria-controls');
              const panel = panelId ? document.getElementById(panelId) : null;
              const icon = btn.querySelector('svg');
              const isOpen = btn.getAttribute('aria-expanded') === 'true';
              // close others
              items.forEach((item) => {
                const b = item.querySelector('[data-qa-btn]');
                const pId = b && b.getAttribute('aria-controls');
                const p = pId ? document.getElementById(pId) : null;
                const i = b ? b.querySelector('svg') : null;
                collapse(p, b, i);
              });
              if (!isOpen) {
                expand(panel, btn, icon);
              } else {
                collapse(panel, btn, icon);
              }
            });
          });
          window.addEventListener('resize', () => {
            buttons.forEach((btn) => {
              if (btn.getAttribute('aria-expanded') === 'true') {
                const panelId = btn.getAttribute('aria-controls');
                const panel = panelId ? document.getElementById(panelId) : null;
                if (panel) panel.style.maxHeight = panel.scrollHeight + 'px';
              }
            });
          });
        }
      </script>

